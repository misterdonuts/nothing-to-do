<p id="notice"><%= notice %></p>

<% provide(:title, @user.user_name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.user_name %>
      </h1>
    </section>
  </aside>
</div>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>User name:</strong>
  <%= @user.user_name %>
</p>

<p>
  <strong>Icon path:</strong>
  <%= @user.image %>
</p>

<p>
  <strong>Invite num:</strong>
  <%= @user.invite_num %>
</p>

<p>
  <strong>Be invited num:</strong>
  <%= @user.be_invited_num %>
</p>

<p>
  <strong>Accept num:</strong>
  <%= @user.accept_num %>
</p>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
