<% if @invitation_relations.present? %>
 <h1>現在あなたを招待している人一覧</h1>

 <table class="table table-hover">
  <thead>
    <tr>
      <th>送り主</th>
      <th>招待内容</th>
      <th>全招待人数</th>
      <th>残り有効時間</th>
    </tr>
  </thead>
  <tbody>
    <% @invitations.each do |i| %>
      <tr>
        <td><%= link_to i.user.user_name, i %></td>
        <td><%= i.contents %></td>
        <td>
          <% i.invitation_relations.each do |member| %>
            <%= member.user.user_name %>
          <% end %>
        </td>
        <td><%= i.time_limit %></td>
      </tr>
    <% end %>
  </tbody>
 </table>
<% else %>
<div class="not-invited">
   現在招待されていません。
</div>
<% end %>
