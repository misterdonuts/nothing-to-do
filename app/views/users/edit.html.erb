<div class="edit-view">

<h1>ユーザー設定</h1>


<%= form_with(model: @user, url: user_path, method: :put, local: true) do |f| %>
  <% if @user.image? %>
    <%= image_tag @user.image.url ,:width => "100"%>
  <% else %>
    <p>画像が登録されていません。</p>
  <% end %>
  <%= f.file_field :image %>
  <%= f.submit '画像をアップロードする' %>
<% end %>
