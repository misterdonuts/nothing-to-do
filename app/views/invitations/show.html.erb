<h1>招待情報</h1>

<table class="table table-hover">
 <thead>
   <tr>
     <th>Id</th>
     <th>User name</th>
     <th>Email</th>
     <th>Time limit</th>
   </tr>
 </thead>
 <tbody>
   <% @invitations.each do |invitation| %>
     <tr>
       <td><%= link_to invitation.invitation_group_id, invitation %></td>
       <td><%= invitation.user.user_name %></td>
       <td><%= invitation.user.email %></td>
       <td><%= invitation.time_limit %></td>
     </tr>
   <% end %>
 </tbody>
</table>