<h1>Editing User</h1>

<%= render 'form', user: @user %>

<%= link_to 'Show', @user %> |
<%= link_to 'Back', users_path %>
<br/><br/>
以下からここから画像アップロード
<br/><br/>



<%= form_with(model: @user, url: user_path, method: :put, local: true) do |f| %>
  <% if @user.image? %>
    <%= image_tag @user.image.url %>
  <% else %>
    <p>画像が登録されていません。</p>
  <% end %>
  <%= f.file_field :image %>
  <%= f.submit '画像をアップロードする' %>
<% end %>
<%= @user.errors.full_messages %>
