<header>
    <nav>
      <ul class="header-list">
        <li><%= link_to image_tag('title.jpg', :align => "center", :width => "220"), root_path %></li>
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "友人一覧", '#' %></li>
        <li><%=link_to "メッセージ", '#' %></li>
        <% if logged_in? %>
        <li class="dropdown">
            <a>ユーザー情報</a>
            <ul class="dropdown-menu display-none">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Setting", edit_user_path(current_user.id) %></li>
              <li><%= link_to "Log out", logout_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </nav>
</header>
